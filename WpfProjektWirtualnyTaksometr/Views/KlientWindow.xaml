<Window x:Class="WpfProjektWirtualnyTaksometr.Views.KlientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProjektWirtualnyTaksometr.Views"
        mc:Ignorable="d"
        Title="Wirtualny Taksometr" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="#1C1C1C">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="430"/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="🚕 EASY TAXI - Formularz Klienta"
                   FontSize="36"
                   FontWeight="Bold"
                   TextAlignment="Center"
                   Height="48"
                   Width="800"
                   Foreground="DarkGoldenrod"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,10,0,0"/>

        <Line X1="0" 
              Y1="60" 
              X2="800"
              Y2="60" 
              HorizontalAlignment="Center"
              Stroke="DarkGoldenrod" 
              StrokeThickness="2"/>

        <Grid Margin="10,6,0,0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="0" 
                        Margin="10,80,0,0" 
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Grid.RowSpan="3">

                <TextBlock Text="🧑 Imię"
                           Foreground="White" 
                           Margin="5,15,0,5"/>

                <TextBox x:Name="ImieTextBox" 
                         Height="30" 
                         Width="350"
                         Background="#2C2C2C"
                         Foreground="White"
                         BorderBrush="Gold"
                         Padding="5"/>

                <TextBlock Text="📞 Telefon"
                           Foreground="White"
                           Margin="5,15,0,5"/>

                <TextBox x:Name="TelefonTextBox"
                         Height="30"
                         Background="#2C2C2C" 
                         Foreground="White"
                         BorderBrush="Gold"
                         Padding="5"/>
            </StackPanel>


            <StackPanel  Grid.Column="1" 
                         Margin="0,80,20,0" 
                         HorizontalAlignment="Right"
                         VerticalAlignment="Top"
                         Grid.RowSpan="3">

                <TextBlock Text="👤 Nazwisko" 
                           Foreground="White" 
                           Margin="5,15,0,5"/>
                
                <TextBox x:Name="NazwiskoTextBox" 
                         Height="30" 
                         Width="350"
                         Background="#2C2C2C"
                         Foreground="White"
                         BorderBrush="Gold"
                         Padding="5"/>

                <TextBlock Text="📧 E-mail"
                           Foreground="White" 
                           Margin="5,15,0,5"/>
                
                <TextBox x:Name="EmailTextBox" 
                         Height="30"
                         Background="#2C2C2C"
                         Foreground="White"
                         BorderBrush="Gold"
                         Padding="5"/>
            </StackPanel>

          
            <StackPanel Grid.ColumnSpan="2"
                        Margin="10,230, 20, 20" 
                        Grid.Row="2">
                
                <TextBlock Text="📍 Miejsce odbioru" 
                           Foreground="White"
                           Margin="5,0,0,5"/>
                
                <TextBox x:Name="MiejsceOdbioruTextBox" 
                         Height="30"
                         Background="#2C2C2C"
                         Foreground="White"
                         BorderBrush="Gold"
                         Padding="5"/>
            </StackPanel>
        </Grid>
        <Button Content="🚖 Znajdź Taxi"
                Click="ZamowTaxi_Click"
                Height="60"
                FontSize="20"
                FontWeight="Bold"
                Background="Gold"
                Foreground="Black"
                BorderBrush="Black"
                Margin="0,250,0,10"
                Cursor="Hand"
                HorizontalAlignment="Center"
                Width="300">
            
            <Button.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="Gold"/>
            </Button.Effect>
        </Button>
        
        <TextBlock Name="ZamowienieStatusText"
                   Text=""
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   FontSize="16"
                   FontFamily="Arial"
                   FontWeight="Bold"
                   Foreground="DarkRed"
                   Margin="0,0,0,22"/>
    </Grid>
</Window>
