<Window x:Class="WpfProjektWirtualnyTaksometr.Views.AutoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProjektWirtualnyTaksometr.Views"
        mc:Ignorable="d"
        Title="Wirtualny Taksometr" Height="550" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="#1C1C1C">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <TextBlock Text=" ➕ Dodaj nowy pojazd"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="DarkGoldenrod"
                   Margin="0,0,0,20"/>

        
        <StackPanel  Orientation="Vertical" Height="300" Margin="0 40 0 0" >
            <TextBlock
                Text = "➖ Marka ➖"
                Foreground="White"
                FontSize="14"/>
              
            <TextBox x:Name="MarkaBox"
                     Height="35"
                     Margin="0 0 0 10"
                     Padding="5"
                     Background="#2C2C2C"
                     Foreground="White"
                     FontSize="14"/>
            
            <TextBlock Text = "➖ Model ➖"             
                       Foreground="White"
                       FontSize="14"/>
            <TextBox x:Name="ModelBox"
                     Height="35"
                     Padding="5"
                     Margin="0 0 0 10"
                     Background="#2C2C2C"
                     Foreground="White"
                     FontSize="14"/>
            <TextBlock Text = "➖ Numer rejestracyjny ➖"             
            Foreground="White"
            FontSize="14"/>
            <TextBox x:Name="RejBox"
                     Height="35"
                     Padding="5"
                     Margin="0 0 0 10"
                     Background="#2C2C2C"
                     Foreground="White"
                     FontSize="14"/>
            <TextBlock Text = "➖ VIN ➖"             
                       Foreground="White"
                       FontSize="14"/>
            <TextBox x:Name="VinBox"
                     Height="35"
                     Padding="5"
                     Background="#2C2C2C"
                     Foreground="White"
                     FontSize="14"
                     Text="VIN"/>
        </StackPanel>
        <Button Content="➕ Dodaj pojazd"
                Height="40"
                VerticalAlignment="Bottom"
                FontSize="16"
                FontWeight="Bold"
                Background="Gold"
                Foreground="Black"
                Margin="0,0,0,0"
                Click="DodajAuto_Click"/>

        <ListBox Grid.Row="2" x:Name="AutoList"
                 Margin="0,20,0,0"
                 Background="#1E1E1E"
                 Foreground="White"
                 BorderBrush="Gray"
                 BorderThickness="1"
                 FontSize="14">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="DarkGoldenrod" BorderThickness="1" Margin="5" Padding="10" CornerRadius="8">
                        <StackPanel>
                            <TextBlock Text="{Binding Marka}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Model}"/>
                            <TextBlock Text="{Binding NumerRejestracyjny}"/>
                            <TextBlock Text="{Binding VIN}"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>